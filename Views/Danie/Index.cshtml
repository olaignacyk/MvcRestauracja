@model IEnumerable<MvcRestauracja.Models.Danie>

@{
    ViewData["Title"] = "Lista dań";
}

<div class="container">
    <h1>Lista dań</h1>

    <div class="row">
        <div class="col">
            <a class="btn btn-primary" asp-action="Create">Dodaj nowe danie</a>
        </div>
        <div class="col text-right">
            <a class="btn btn-secondary" asp-action="Dashboard" asp-controller="Home">Powrót do panelu głównego</a>
        </div>
    </div>

    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nazwa)</th>
                <th>@Html.DisplayNameFor(model => model.Cena)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nazwa)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cena)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
